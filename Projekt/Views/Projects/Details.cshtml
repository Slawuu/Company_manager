@model Projekt.Models.Project
@{
    ViewData["Title"] = "Project Details";
}

<div class="neo-card" style="max-width: 900px; margin: 0 auto;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
        <h1 style="font-size: 2.5rem; font-weight: 900; text-transform: uppercase; margin: 0;">
            <i class="bi bi-info-circle-fill"></i> @Model.Name
        </h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <div style="display: flex; gap: 0.5rem;">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="neo-btn neo-btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="AssignEmployees" asp-route-id="@Model.Id" class="neo-btn neo-btn-success">
                    <i class="bi bi-people"></i> Team
                </a>
            </div>
        }
    </div>

    <div style="background: var(--neo-blue); padding: 2rem; border: 4px solid var(--neo-black); box-shadow: 4px 4px 0px var(--neo-black); margin-bottom: 2rem;">
        <div style="margin-bottom: 1.5rem;">
            <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 0.5rem;">Description</h3>
            <p style="font-weight: 700; margin: 0;">@(Model.Description ?? "No description provided")</p>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
            <div>
                <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 0.5rem;">Start Date</h3>
                <p style="font-weight: 700; margin: 0;">@Model.StartDate.ToString("MMMM dd, yyyy")</p>
            </div>
            <div>
                <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 0.5rem;">End Date</h3>
                <p style="font-weight: 700; margin: 0;">
                    @if (Model.EndDate.HasValue)
                    {
                        @Model.EndDate.Value.ToString("MMMM dd, yyyy")
                    }
                    else
                    {
                        <span>Ongoing</span>
                    }
                </p>
            </div>
        </div>
    </div>

    <div class="neo-card" style="background: var(--neo-green); margin-bottom: 2rem;">
        <h2 style="font-size: 1.75rem; font-weight: 900; text-transform: uppercase; margin-bottom: 1.5rem;">
            <i class="bi bi-people-fill"></i> Team Members (@Model.EmployeeProjects.Count)
        </h2>

        @if (Model.EmployeeProjects.Any())
        {
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 1rem;">
                @foreach (var ep in Model.EmployeeProjects)
                {
                    <div style="background: var(--neo-white); padding: 1rem; border: 3px solid var(--neo-black); box-shadow: 3px 3px 0px var(--neo-black); text-align: center;">
                        <i class="bi bi-person-circle" style="font-size: 2rem; margin-bottom: 0.5rem;"></i>
                        <p style="font-weight: 900; margin: 0;">@ep.Employee.FirstName @ep.Employee.LastName</p>
                        <p style="font-size: 0.85rem; font-weight: 700; margin: 0; color: #666;">@ep.Employee.Position</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p style="font-weight: 700; text-align: center; padding: 2rem;">No team members assigned yet.</p>
        }
    </div>

    <div>
        <a asp-action="Index" class="neo-btn" style="background: var(--neo-white);">
            <i class="bi bi-arrow-left"></i> Back to Projects
        </a>
    </div>
</div>
