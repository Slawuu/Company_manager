@model IEnumerable<Projekt.Models.Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="neo-card" style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
        <h1 style="font-size: 2.5rem; font-weight: 900; text-transform: uppercase; margin: 0;">
            <i class="bi bi-kanban-fill"></i> Projects
        </h1>
        <a asp-action="Create" class="neo-btn neo-btn-primary">
            <i class="bi bi-plus-circle"></i> Add Project
        </a>
    </div>

    <div style="overflow-x: auto;">
        <table class="neo-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Team Size</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-weight: 700;">@item.Name</td>
                        <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@(item.EndDate?.ToString("yyyy-MM-dd") ?? "Ongoing")</td>
                        <td>
                            <span class="neo-badge" style="background: var(--neo-purple);">
                                @item.EmployeeProjects.Count Members
                            </span>
                        </td>
                        <td>
                            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                <a asp-action="Details" asp-route-id="@item.Id" class="neo-btn neo-btn-info" style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="AssignEmployees" asp-route-id="@item.Id" class="neo-btn" style="padding: 0.5rem 1rem; font-size: 0.85rem; background: var(--neo-green);">
                                    <i class="bi bi-people"></i> Team
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="neo-btn" style="padding: 0.5rem 1rem; font-size: 0.85rem; background: var(--neo-yellow);">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="neo-btn neo-btn-danger" style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
