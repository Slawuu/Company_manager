@model Projekt.Models.Project
@{
    ViewData["Title"] = "Assign Employees";
}

<div class="neo-card" style="max-width: 1000px; margin: 0 auto;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2rem; font-weight: 800; text-transform: uppercase; margin: 0; color: var(--color-primary);">
            <i class="bi bi-people-fill"></i> Manage Team
        </h1>
        <a asp-action="Index" class="neo-btn">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <div class="neo-inset" style="padding: 1.5rem; margin-bottom: 2rem;">
        <h2 style="font-weight: 700; margin: 0; color: var(--color-text-main); font-size: 1.5rem;">@Model.Name</h2>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-top: 2rem;">
        <div>
            <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 1rem;">
                Current Team (@Model.EmployeeProjects.Count)
            </h3>
            @if (Model.EmployeeProjects.Any())
            {
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                    @foreach (var ep in Model.EmployeeProjects)
                    {
                        <div class="neo-card" style="padding: 1rem; display: flex; justify-content: space-between; align-items: center; margin-bottom: 0;">
                            <div>
                                <p style="margin: 0; font-weight: 700;">@ep.Employee.FirstName @ep.Employee.LastName</p>
                                <p style="margin: 0; font-size: 0.9rem; color: var(--color-text-muted);">@ep.Employee.Position</p>
                            </div>
                            <form asp-action="RemoveEmployee" method="post" style="margin: 0;">
                                <input type="hidden" name="projectId" value="@Model.Id" />
                                <input type="hidden" name="employeeId" value="@ep.EmployeeId" />
                                <button type="submit" class="neo-btn neo-btn-danger" style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                    <i class="bi bi-x-circle"></i> Remove
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="neo-inset" style="padding: 2rem; text-align: center;">
                    <p style="margin: 0; font-weight: 600; color: var(--color-text-muted);">No team members yet</p>
                </div>
            }
        </div>

        <div>
            <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 1rem;">
                Available Employees
            </h3>
            @if (ViewBag.Employees != null && ((List<Projekt.Models.Employee>)ViewBag.Employees).Any())
            {
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                    @foreach (var emp in (List<Projekt.Models.Employee>)ViewBag.Employees)
                    {
                        <div class="neo-card" style="padding: 1rem; display: flex; justify-content: space-between; align-items: center; margin-bottom: 0;">
                            <div>
                                <p style="margin: 0; font-weight: 700;">@emp.FirstName @emp.LastName</p>
                                <p style="margin: 0; font-size: 0.9rem; color: var(--color-text-muted);">@emp.Position</p>
                            </div>
                            <form asp-action="AssignEmployee" method="post" style="margin: 0;">
                                <input type="hidden" name="projectId" value="@Model.Id" />
                                <input type="hidden" name="employeeId" value="@emp.Id" />
                                <button type="submit" class="neo-btn neo-btn-success" style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                    <i class="bi bi-plus-circle"></i> Add
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="neo-inset" style="padding: 2rem; text-align: center;">
                    <p style="margin: 0; font-weight: 600; color: var(--color-text-muted);">All employees assigned!</p>
                </div>
            }
        </div>
    </div>
</div>
