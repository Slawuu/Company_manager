@model IEnumerable<IGrouping<string, Projekt.Models.Employee>>
@{
    ViewData["Title"] = "Employees by Department";
}

<div class="neo-card" style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: 900; text-transform: uppercase; margin: 0;">
            <i class="bi bi-building"></i> Employees by Department
        </h1>
        <a asp-action="Index" class="neo-btn" style="background: var(--neo-white);">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    @foreach (var group in Model)
    {
        <div class="neo-card neo-card-warning" style="margin-bottom: 2rem;">
            <h2 style="font-size: 1.75rem; font-weight: 800; text-transform: uppercase; margin-bottom: 1.5rem;">
                <i class="bi bi-folder-fill"></i> @group.Key (@group.Count() employees)
            </h2>

            <div style="overflow-x: auto;">
                <table class="neo-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Position</th>
                            <th>Hire Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in group)
                        {
                            <tr>
                                <td data-label="Name" style="font-weight: 700;">@employee.FirstName @employee.LastName</td>
                                <td data-label="Email">@employee.Email</td>
                                <td data-label="Position">@employee.Position</td>
                                <td data-label="Hire Date">@employee.HireDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
