@model Projekt.Models.LeaveRequest
@{
    ViewData["Title"] = "Delete Leave Request";
}

<div class="neo-card" style="max-width: 600px; margin: 0 auto;">
    <h1 style="font-size: 2rem; font-weight: 800; color: var(--color-primary); margin-bottom: 2rem; text-align: center;">
        <i class="bi bi-trash3-fill" style="color: var(--neo-red);"></i><br />
        Delete Request
    </h1>
    
    <div class="neo-inset" style="padding: 2rem; margin-bottom: 2rem;">
        <h3 style="font-weight: 700; text-align: center; margin-bottom: 1.5rem; color: var(--color-text-main);">
            Are you sure you want to withdraw this request?
        </h3>
        
        <div style="margin: 1.5rem 0;">
            <div style="display: grid; grid-template-columns: auto 1fr; gap: 1rem; align-items: center; margin-bottom: 0.5rem;">
                <span class="text-muted" style="min-width: 100px;">Employee:</span>
                <span style="font-weight: 600;">@Model.Employee.FirstName @Model.Employee.LastName</span>
            </div>
             <div style="display: grid; grid-template-columns: auto 1fr; gap: 1rem; align-items: center; margin-bottom: 0.5rem;">
                <span class="text-muted" style="min-width: 100px;">Type:</span>
                <span style="font-weight: 600;">@Model.LeaveType</span>
            </div>
             <div style="display: grid; grid-template-columns: auto 1fr; gap: 1rem; align-items: center; margin-bottom: 0.5rem;">
                <span class="text-muted" style="min-width: 100px;">Dates:</span>
                <span style="font-weight: 600;">@Model.StartDate.ToString("MMM dd") - @Model.EndDate.ToString("MMM dd, yyyy")</span>
            </div>
             <div style="display: grid; grid-template-columns: auto 1fr; gap: 1rem; align-items: center;">
                <span class="text-muted" style="min-width: 100px;">Status:</span>
                <span style="font-weight: 600;" class="@(Model.Status == Projekt.Models.LeaveRequestStatus.Approved ? "text-status-green" : Model.Status == Projekt.Models.LeaveRequestStatus.Rejected ? "text-status-red" : "text-status-orange")">@Model.Status</span>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
            <button type="submit" class="neo-btn neo-btn-danger" style="width: 100%;">
                <i class="bi bi-trash-fill"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="neo-btn" style="width: 100%; text-align: center;">
                Cancel
            </a>
        </div>
    </form>
</div>
