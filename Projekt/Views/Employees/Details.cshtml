@model Projekt.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="neo-card" style="max-width: 900px; margin: 0 auto;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: 900; text-transform: uppercase; margin: 0;">
            <i class="bi bi-person-badge-fill"></i> Employee Details
        </h1>
        <a asp-action="Index" class="neo-btn" style="background: var(--neo-white);">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
        <div>
            <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 1rem; font-size: 1.25rem;">
                Personal Information
            </h3>
            <div style="background: var(--neo-yellow); padding: 1.5rem; border: 4px solid var(--neo-black); box-shadow: 4px 4px 0px var(--neo-black);">
                <p style="margin-bottom: 0.75rem;"><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                <p style="margin-bottom: 0.75rem;"><strong>Email:</strong> @Model.Email</p>
                <p style="margin-bottom: 0;"><strong>Phone:</strong> @Model.PhoneNumber</p>
            </div>
        </div>

        <div>
            <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 1rem; font-size: 1.25rem;">
                Employment Information
            </h3>
            <div style="background: var(--neo-blue); padding: 1.5rem; border: 4px solid var(--neo-black); box-shadow: 4px 4px 0px var(--neo-black);">
                <p style="margin-bottom: 0.75rem;"><strong>Position:</strong> @Model.Position</p>
                <p style="margin-bottom: 0.75rem;"><strong>Department:</strong> @Model.Department?.Name</p>
                <p style="margin-bottom: 0.75rem;"><strong>Hire Date:</strong> @Model.HireDate.ToString("MMMM dd, yyyy")</p>
                <p style="margin-bottom: 0;"><strong>Salary:</strong> $@Model.Salary.ToString("N2")</p>
            </div>
        </div>
    </div>

    @if (Model.EmployeeProjects.Any())
    {
        <div style="margin-top: 2rem;">
            <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 1rem; font-size: 1.25rem;">
                <i class="bi bi-kanban-fill"></i> Assigned Projects
            </h3>
            <div style="overflow-x: auto;">
                <table class="neo-table">
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Assigned Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ep in Model.EmployeeProjects)
                        {
                            <tr>
                                <td style="font-weight: 700;">@ep.Project.Name</td>
                                <td>@ep.AssignedDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (User.IsInRole("Admin") || User.IsInRole("HR"))
    {
        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="neo-btn" style="background: var(--neo-yellow);">
                <i class="bi bi-pencil-fill"></i> Edit Employee
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="neo-btn neo-btn-danger">
                <i class="bi bi-trash-fill"></i> Delete Employee
            </a>
        </div>
    }
</div>
