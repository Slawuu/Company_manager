@model Projekt.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="neo-card" style="max-width: 900px; margin: 0 auto;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2rem; font-weight: 800; color: var(--color-primary); margin: 0;">
            <i class="bi bi-person-badge-fill"></i> Employee Details
        </h1>
        <a asp-action="Index" class="neo-btn">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
        <div>
            <h3 style="font-weight: 700; text-transform: uppercase; margin-bottom: 1rem; font-size: 1.1rem; color: var(--color-primary);">
                Personal Information
            </h3>
            <div class="neo-inset" style="padding: 1.5rem;">
                <div style="margin-bottom: 0.75rem;">
                    <span class="text-muted" style="display: block; font-size: 0.8rem;">Name</span>
                    <span style="font-weight: 600; font-size: 1.1rem;">@Model.FirstName @Model.LastName</span>
                </div>
                <div style="margin-bottom: 0.75rem;">
                    <span class="text-muted" style="display: block; font-size: 0.8rem;">Email</span>
                    <span style="font-weight: 600;">@Model.Email</span>
                </div>
                <div>
                     <span class="text-muted" style="display: block; font-size: 0.8rem;">Phone</span>
                     <span style="font-weight: 600;">@(Model.PhoneNumber ?? "N/A")</span>
                </div>
            </div>
        </div>

        <div>
            <h3 style="font-weight: 700; text-transform: uppercase; margin-bottom: 1rem; font-size: 1.1rem; color: var(--color-primary);">
                Employment Information
            </h3>
            <div class="neo-inset" style="padding: 1.5rem;">
                <div style="margin-bottom: 0.75rem;">
                     <span class="text-muted" style="display: block; font-size: 0.8rem;">Position</span>
                     <span style="font-weight: 600;">@Model.Position</span>
                </div>
                <div style="margin-bottom: 0.75rem;">
                     <span class="text-muted" style="display: block; font-size: 0.8rem;">Department</span>
                     <span style="font-weight: 600;">@Model.Department?.Name</span>
                </div>
                <div style="margin-bottom: 0.75rem;">
                     <span class="text-muted" style="display: block; font-size: 0.8rem;">Hire Date</span>
                     <span style="font-weight: 600;">@Model.HireDate.ToString("MMMM dd, yyyy")</span>
                </div>
                 <div>
                     <span class="text-muted" style="display: block; font-size: 0.8rem;">Salary</span>
                     <span style="font-weight: 600;">$@Model.Salary.ToString("N2")</span>
                </div>
            </div>
        </div>
    </div>

    @if (Model.EmployeeProjects.Any())
    {
        <div style="margin-top: 2rem;">
            <h3 style="font-weight: 900; text-transform: uppercase; margin-bottom: 1rem; font-size: 1.25rem;">
                <i class="bi bi-kanban-fill"></i> Assigned Projects
            </h3>
            <div style="overflow-x: auto;">
                <table class="neo-table">
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Assigned Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ep in Model.EmployeeProjects)
                        {
                            <tr>
                                <td data-label="Project Name" style="font-weight: 700;">@ep.Project.Name</td>
                                <td data-label="Assigned Date">@ep.AssignedDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (User.IsInRole("Admin") || User.IsInRole("HR"))
    {
        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="neo-btn neo-btn-primary">
                <i class="bi bi-pencil-fill"></i> Edit Employee
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="neo-btn neo-btn-danger">
                <i class="bi bi-trash-fill"></i> Delete Employee
            </a>
        </div>
    }
</div>
