@model Projekt.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="neo-card" style="max-width: 600px; margin: 0 auto;">
    <h1 style="font-size: 2rem; font-weight: 800; color: var(--color-primary); margin-bottom: 2rem; text-align: center;">
        <i class="bi bi-exclamation-triangle-fill" style="color: var(--neo-red);"></i><br />
        Delete Employee
    </h1>
    
    <div class="neo-inset" style="padding: 2rem; margin-bottom: 2rem;">
        <h3 style="font-weight: 700; text-align: center; margin-bottom: 1.5rem; color: var(--color-text-main);">
            Are you sure you want to delete this employee?
        </h3>
        
        <div style="margin: 1.5rem 0;">
            <div style="display: grid; grid-template-columns: auto 1fr; gap: 1rem; align-items: center; margin-bottom: 0.5rem;">
                <span class="text-muted" style="min-width: 100px;">Name:</span>
                <span style="font-weight: 600;">@Model.FirstName @Model.LastName</span>
            </div>
            <div style="display: grid; grid-template-columns: auto 1fr; gap: 1rem; align-items: center; margin-bottom: 0.5rem;">
                 <span class="text-muted" style="min-width: 100px;">Email:</span>
                 <span style="font-weight: 600;">@Model.Email</span>
            </div>
             <div style="display: grid; grid-template-columns: auto 1fr; gap: 1rem; align-items: center; margin-bottom: 0.5rem;">
                 <span class="text-muted" style="min-width: 100px;">Position:</span>
                 <span style="font-weight: 600;">@Model.Position</span>
            </div>
             <div style="display: grid; grid-template-columns: auto 1fr; gap: 1rem; align-items: center;">
                 <span class="text-muted" style="min-width: 100px;">Department:</span>
                 <span style="font-weight: 600;">@Model.Department?.Name</span>
            </div>
        </div>

        <div style="background: rgba(239, 68, 68, 0.1); padding: 1rem; border-radius: var(--radius-sm); border: 1px solid var(--neo-red); text-align: center; margin-top: 1.5rem;">
            <p style="margin: 0; font-weight: 600; color: var(--neo-red);">
                <i class="bi bi-exclamation-circle-fill"></i> This action cannot be undone!
            </p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
            <button type="submit" class="neo-btn neo-btn-danger" style="width: 100%;">
                <i class="bi bi-trash-fill"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="neo-btn" style="width: 100%; text-align: center;">
                Cancel
            </a>
        </div>
    </form>
</div>
