@model IEnumerable<Projekt.Models.Department>
@{
    ViewData["Title"] = "Departments";
}

<div class="neo-card" style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
        <h1 style="font-size: 2.5rem; font-weight: 900; text-transform: uppercase; margin: 0;">
            <i class="bi bi-building"></i> Departments
        </h1>
        <a asp-action="Create" class="neo-btn neo-btn-primary">
            <i class="bi bi-plus-circle"></i> Add Department
        </a>
    </div>

    <div style="overflow-x: auto;">
        <table class="neo-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Employees</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Name" style="font-weight: 700;">@item.Name</td>
                        <td data-label="Description">@(item.Description ?? "N/A")</td>
                        <td data-label="Employees">
                            <span class="neo-badge" style="background: var(--neo-green);">
                                @item.Employees.Count Employees
                            </span>
                        </td>
                        <td data-label="Actions">
                            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; justify-content: flex-end;">
                                <a asp-action="Details" asp-route-id="@item.Id" class="neo-btn neo-btn-info" style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="neo-btn" style="padding: 0.5rem 1rem; font-size: 0.85rem; background: var(--neo-yellow);">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="neo-btn neo-btn-danger" style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
