@model Projekt.Models.Department
@{
    ViewData["Title"] = "Department Details";
}

<div class="neo-card" style="max-width: 900px; margin: 0 auto;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2rem; font-weight: 800; text-transform: uppercase; margin: 0; color: var(--color-primary);">
            <i class="bi bi-building"></i> @Model.Name
        </h1>
        <a asp-action="Index" class="neo-btn">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <div class="neo-inset" style="padding: 2rem; margin-bottom: 2rem;">
        <h3 style="font-weight: 700; text-transform: uppercase; margin-bottom: 1rem; color: var(--color-text-muted); font-size: 0.9rem;">Description</h3>
        <p style="margin: 0; font-weight: 500; font-size: 1.1rem;">@(Model.Description ?? "No description provided.")</p>
    </div>

    @if (Model.Employees.Any())
    {
        <h3 style="font-weight: 800; text-transform: uppercase; margin-bottom: 1rem; font-size: 1.5rem; color: var(--color-primary);">
            <i class="bi bi-people-fill"></i> Employees (@Model.Employees.Count)
        </h3>
        <div style="overflow-x: auto;">
            <table class="neo-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Email</th>
                        <th>Hire Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model.Employees)
                    {
                        <tr>
                            <td data-label="Name" style="font-weight: 700;">@emp.FirstName @emp.LastName</td>
                            <td data-label="Position">@emp.Position</td>
                            <td data-label="Email">@emp.Email</td>
                            <td data-label="Hire Date">@emp.HireDate.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="neo-inset" style="padding: 2rem; text-align: center;">
            <p style="margin: 0; font-weight: 600; font-size: 1.1rem; color: var(--color-text-muted);">
                <i class="bi bi-info-circle-fill"></i> No employees in this department yet.
            </p>
        </div>
    }

    <div style="display: flex; gap: 1rem; margin-top: 2rem;">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="neo-btn neo-btn-primary">
            <i class="bi bi-pencil-fill"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="neo-btn neo-btn-danger">
            <i class="bi bi-trash-fill"></i> Delete
        </a>
    </div>
</div>
