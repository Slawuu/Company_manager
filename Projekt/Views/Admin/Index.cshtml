@model IEnumerable<Projekt.Models.UserWithRoleViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="neo-card" style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
        <h1 style="font-size: 2.5rem; font-weight: 900; text-transform: uppercase; margin: 0;">
            <i class="bi bi-people-fill"></i> Users
        </h1>
        <a asp-action="CreateUser" class="neo-btn neo-btn-primary">
            <i class="bi bi-plus-circle"></i> Add User
        </a>
    </div>

    <div style="overflow-x: auto;">
        <table class="neo-table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Email</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td style="font-weight: 700;">@user.UserId.Substring(0, 8)...</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="neo-badge @(user.Role == "Admin" ? "neo-badge-admin" : "neo-badge-user")">
                                @user.Role
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>