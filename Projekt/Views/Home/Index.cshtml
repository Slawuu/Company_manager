            <div>
                <h1 style="margin: 0;">My Dashboard</h1>
                <p style="color: var(--color-text-muted); font-size: 1.1rem; font-weight: 500; margin-top: 0.5rem;">
                    Welcome back, @userName!
                </p>
            </div>
            <a asp-controller="Profile" asp-action="Index" class="neo-btn">
                My Profile
            </a>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <h2 style="margin-bottom: 2.5rem;">Quick Actions</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2.5rem; margin-bottom: 4rem;">
            <div class="neo-card" style="padding: 3rem;">
                <div style="width: 64px; height: 64px; background: rgba(29, 120, 159, 0.1); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin-bottom: 2rem;">
                    <i class="bi bi-people-fill" style="font-size: 2rem; color: var(--color-primary);"></i>
                </div>
                <h4 style="margin-bottom: 1rem;">Human Resources</h4>
                <p style="color: var(--color-text-muted); margin-bottom: 2.5rem; font-size: 0.95rem;">Manage employee records, roles, and system permissions.</p>
                <a asp-controller="Employees" asp-action="Index" class="neo-btn" style="width: 100%; height: 56px; font-size: 0.9rem;">
                    Manage Team
                </a>
            </div>

            <div class="neo-card" style="padding: 3rem;">
                <div style="width: 64px; height: 64px; background: rgba(139, 92, 246, 0.1); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin-bottom: 2rem;">
                    <i class="bi bi-building" style="font-size: 2rem; color: #8b5cf6;"></i>
                </div>
                <h4 style="margin-bottom: 1rem;">Departments</h4>
                <p style="color: var(--color-text-muted); margin-bottom: 2.5rem; font-size: 0.95rem;">Organize company structure and manage departments.</p>
                <a asp-controller="Departments" asp-action="Index" class="neo-btn" style="width: 100%; height: 56px; font-size: 0.9rem;">
                    Browse Departments
                </a>
            </div>

            <div class="neo-card" style="padding: 3rem;">
                <div style="width: 64px; height: 64px; background: rgba(16, 185, 129, 0.1); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin-bottom: 2rem;">
                    <i class="bi bi-kanban" style="font-size: 2rem; color: #10b981;"></i>
                </div>
                <h4 style="margin-bottom: 1rem;">Project Hub</h4>
                <p style="color: var(--color-text-muted); margin-bottom: 2.5rem; font-size: 0.95rem;">Monitor project timelines, assignments, and progress.</p>
                <a asp-controller="Projects" asp-action="Index" class="neo-btn" style="width: 100%; height: 56px; font-size: 0.9rem;">
                    Launch Projects
                </a>
            </div>

            <div class="neo-card" style="padding: 3rem;">
                <div style="width: 64px; height: 64px; background: rgba(245, 158, 11, 0.1); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin-bottom: 2rem;">
                    <i class="bi bi-file-earmark-bar-graph" style="font-size: 2rem; color: #f59e0b;"></i>
                </div>
                <h4 style="margin-bottom: 1rem;">Reports</h4>
                <p style="color: var(--color-text-muted); margin-bottom: 2.5rem; font-size: 0.95rem;">Access analytics and automated reporting tools.</p>
                <a asp-controller="Reports" asp-action="Index" class="neo-btn" style="width: 100%; height: 56px; font-size: 0.9rem;">
                    View Analytics
                </a>
            </div>
        </div>
    }
    else
    {
        <h2 style="margin-bottom: 2.5rem;">Quick Access</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2.5rem;">
            <div class="neo-card" style="padding: 3rem;">
                <div style="width: 64px; height: 64px; background: rgba(29, 120, 159, 0.1); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin-bottom: 2rem;">
                    <i class="bi bi-person-circle" style="font-size: 2rem; color: var(--color-primary);"></i>
                </div>
                <h4 style="margin-bottom: 1rem;">My Profile</h4>
                <p style="color: var(--color-text-muted); margin-bottom: 2.5rem; font-size: 0.95rem;">View your employment details and project history.</p>
                <a asp-controller="Profile" asp-action="Index" class="neo-btn" style="width: 100%; height: 56px;">
                    Go to Profile
                </a>
            </div>

            <div class="neo-card" style="padding: 3rem;">
                <div style="width: 64px; height: 64px; background: rgba(16, 185, 129, 0.1); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin-bottom: 2rem;">
                    <i class="bi bi-calendar-check" style="font-size: 2rem; color: #10b981;"></i>
                </div>
                <h4 style="margin-bottom: 1rem;">Leave Requests</h4>
                <p style="color: var(--color-text-muted); margin-bottom: 2.5rem; font-size: 0.95rem;">Submit and track your time off requests.</p>
                <a asp-controller="LeaveRequests" asp-action="Index" class="neo-btn" style="width: 100%; height: 56px;">
                    Manage Leave
                </a>
            </div>

             <div class="neo-card" style="padding: 3rem;">
                <div style="width: 64px; height: 64px; background: rgba(139, 92, 246, 0.1); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin-bottom: 2rem;">
                    <i class="bi bi-people" style="font-size: 2rem; color: #8b5cf6;"></i>
                </div>
                <h4 style="margin-bottom: 1rem;">Team Directory</h4>
                <p style="color: var(--color-text-muted); margin-bottom: 2.5rem; font-size: 0.95rem;">Connect with colleagues and view team members.</p>
                <a asp-controller="Employees" asp-action="Index" class="neo-btn" style="width: 100%; height: 56px;">
                    Team List
                </a>
            </div>
        </div>
    }
}
else
