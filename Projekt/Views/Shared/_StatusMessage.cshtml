@if (TempData["Success"] != null || TempData["Error"] != null)
{
    var isSuccess = TempData["Success"] != null;
    var message = isSuccess ? TempData["Success"] : TempData["Error"];
    var icon = isSuccess ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill";
    var color = isSuccess ? "var(--neo-green)" : "var(--neo-red)";
    var title = isSuccess ? "Success!" : "Error";

    <div class="modal fade" id="statusModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content neo-card" style="padding: 0; border: none;">
                <div class="modal-header" style="border-bottom: none; padding: 1.5rem 1.5rem 0 1.5rem;">
                    <h5 class="modal-title" style="color: @color; font-weight: 900; text-transform: uppercase;">
                        <i class="bi @icon"></i> @title
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="padding: 1.5rem; font-weight: 600;">
                    @message
                </div>
                <div class="modal-footer" style="border-top: none; padding: 0 1.5rem 1.5rem 1.5rem;">
                    <button type="button" class="neo-btn" data-bs-dismiss="modal" style="width: 100%;">OK</button>
                </div>
            </div>
        </div>
    </div>

    <script type="module">
        import { Modal } from '/lib/bootstrap/dist/js/bootstrap.esm.min.js';
        document.addEventListener('DOMContentLoaded', function () {
            var myModal = new Modal(document.getElementById('statusModal'));
            myModal.show();
        });
    </script>
}
