<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projekt</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projekt.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="sidebar-header">
                @if (User.IsInRole("Admin"))
                {
                    <h2><i class="bi bi-lightning-charge-fill"></i> Admin Panel</h2>
                }
                else if (User.IsInRole("HR") || User.IsInRole("Manager"))
                {
                    <h2><i class="bi bi-person-badge-fill"></i> Staff Panel</h2>
                }
                else
                {
                    <h2><i class="bi bi-person-circle"></i> Employee Panel</h2>
                }
            </div>
            <ul class="sidebar-menu">
                <li class="sidebar-menu-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-menu-link">
                        <i class="bi bi-house-fill"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="sidebar-menu-item">
                    <a asp-area="" asp-controller="Profile" asp-action="Index" class="sidebar-menu-link">
                        <i class="bi bi-person-circle"></i>
                        <span>My Profile</span>
                    </a>
                </li>
                <li class="sidebar-menu-item">
                    <a asp-area="" asp-controller="Employees" asp-action="Index" class="sidebar-menu-link">
                        <i class="bi bi-people-fill"></i>
                        <span>Team Directory</span>
                    </a>
                </li>
                <li class="sidebar-menu-item">
                    <a asp-area="" asp-controller="LeaveRequests" asp-action="Index" class="sidebar-menu-link">
                        <i class="bi bi-calendar-check-fill"></i>
                        <span>Leave Requests</span>
                    </a>
                </li>

                @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Manager"))
                {
                    <li class="sidebar-menu-item">
                        <a asp-area="" asp-controller="Departments" asp-action="Index" class="sidebar-menu-link">
                            <i class="bi bi-building"></i>
                            <span>Departments</span>
                        </a>
                    </li>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <li class="sidebar-menu-item">
                        <a asp-area="" asp-controller="Projects" asp-action="Index" class="sidebar-menu-link">
                            <i class="bi bi-kanban-fill"></i>
                            <span>Projects</span>
                        </a>
                    </li>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Manager"))
                {
                    <li class="sidebar-menu-item">
                        <a asp-area="" asp-controller="Reports" asp-action="Index" class="sidebar-menu-link">
                            <i class="bi bi-file-earmark-bar-graph-fill"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                }
            </ul>
        </aside>

        <button class="admin-sidebar-toggle" id="sidebarToggle" onclick="toggleSidebar()">
            <i class="bi bi-list"></i>
        </button>
    }

    <div class="@(User.Identity.IsAuthenticated ? "content-with-sidebar" : "")" id="mainContent">
        <header>
            <nav class="neo-navbar navbar navbar-expand-lg" style="padding: 0.5rem 2rem;">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav me-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/"><i class="bi bi-house-fill"></i> Home</a>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <div class="main-content">
            <partial name="_StatusMessage" />
            @RenderBody()
        </div>

        <footer class="neo-footer">
            <p style="margin-bottom: 0;">
                <strong>&copy; 2025 - Projekt</strong>
            </p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const mainContent = document.getElementById('mainContent');
            sidebar.classList.toggle('show');
        }

        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('adminSidebar');
            const toggle = document.getElementById('sidebarToggle');
            
            if (sidebar && toggle && window.innerWidth <= 992) {
                if (!sidebar.contains(event.target) && !toggle.contains(event.target)) {
                    sidebar.classList.remove('show');
                }
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
