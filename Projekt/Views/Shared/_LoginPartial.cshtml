@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav" style="gap: 1rem; align-items: center;">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-controller="Profile" asp-action="Index" class="nav-link" style="display: flex; align-items: center; gap: 0.5rem; font-weight: 700; color: var(--color-text-main);">
                <i class="bi bi-person-circle" style="font-size: 1.5rem;"></i>
                <span>@User.Identity?.Name</span>
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="neo-btn neo-btn-danger" style="padding: 0.5rem 1.25rem; font-size: 0.85rem; height: auto; border-radius: 999px;">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="neo-btn" id="login" asp-area="Identity" asp-page="/Account/Login" style="padding: 0.5rem 2rem; font-size: 0.9rem; height: auto;">
                Login
            </a>
        </li>
    }
</ul>
